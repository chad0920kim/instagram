    <script>
        let automationInterval;
        let currentImage = null;
        let convertedImageData = null;
        let generatedLyrics = '';
        
        // ì„¤ì • ì €ì¥
        function saveSettings() {
            const settings = {
                driveFolder: document.getElementById('driveFolder').value,
                sheetsId: document.getElementById('sheetsId').value,
                instaUsername: document.getElementById('instaUsername').value,
                instaToken: document.getElementById('instaToken').value,
                lyricsPrompt: document.getElementById('lyricsPrompt').value,
                stylePrompt: document.getElementById('stylePrompt').value
            };
            
            // ì‹¤ì œ êµ¬í˜„ì—ì„œëŠ” ì„œë²„ë‚˜ ë¡œì»¬ ìŠ¤í† ë¦¬ì§€ì— ì €ì¥
            console.log('Settings saved:', settings);
            addStatusLog('âœ… ì„¤ì •ì´ ì €ì¥ë˜ì—ˆìŠµë‹ˆë‹¤.');
            
            // êµ¬ê¸€ ì‹œíŠ¸ì— ì„¤ì • ì €ì¥ (ì‹¤ì œ êµ¬í˜„ ì‹œ)
            saveToGoogleSheets('settings', settings);
        }
        
        // ì„¤ì • ë¶ˆëŸ¬ì˜¤ê¸°
        function loadSettings() {
            // ì‹¤ì œ êµ¬í˜„ì—ì„œëŠ” ì €ì¥ëœ ì„¤ì •ì„ ë¶ˆëŸ¬ì˜´
            addStatusLog('âœ… ì„¤ì •ì„ ë¶ˆëŸ¬ì™”ìŠµë‹ˆë‹¤.');
        }
        
        // ìë™í™” ì‹œì‘
        function startAutomation() {
            addStatusLog('ğŸš€ ìë™í™”ë¥¼ ì‹œì‘í•©ë‹ˆë‹¤...');
            
            // Google Drive í´ë” ëª¨ë‹ˆí„°ë§ ì‹œë®¬ë ˆì´ì…˜
            automationInterval = setInterval(() => {
                checkForNewImages();
            }, 5000); // 5ì´ˆë§ˆë‹¤ í™•ì¸
            
            addStatusLog('ğŸ”„ Google Drive í´ë” ëª¨ë‹ˆí„°ë§ ì¤‘...');
        }
        
        // ìë™í™” ì¤‘ì§€
        function stopAutomation() {
            if (automationInterval) {
                clearInterval(automationInterval);
                automationInterval = null;
            }
            addStatusLog('â¹ï¸ ìë™í™”ê°€ ì¤‘ì§€ë˜ì—ˆìŠµë‹ˆë‹¤.');
        }
        
        // ìƒˆ ì´ë¯¸ì§€ í™•ì¸
        async function checkForNewImages() {
            try {
                // ì‹¤ì œ êµ¬í˜„ì—ì„œëŠ” Google Drive APIë¥¼ ì‚¬ìš©
                addStatusLog('ğŸ” ìƒˆë¡œìš´ ì´ë¯¸ì§€ë¥¼ í™•ì¸ ì¤‘...');
                
                // ì˜ˆì‹œ: API í˜¸ì¶œ ì‹œë®¬ë ˆì´ì…˜
                const response = await fetch('https://api.anthropic.com/v1/messages', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        model: 'claude-sonnet-4-20250514',
                        max_tokens: 100,
                        messages: [
                            { role: 'user', content: 'Check for new images in Google Drive folder' }
                        ]
                    })
                });
                
                // ìƒˆ ì´ë¯¸ì§€ê°€ ë°œê²¬ë˜ë©´ ìë™ ì²˜ë¦¬
                // processNewImage(imageFile);
                
            } catch (error) {
                addStatusLog('âŒ ì˜¤ë¥˜: ' + error.message);
            }
        }
        
        // íŒŒì¼ ì—…ë¡œë“œ ì²˜ë¦¬
        function handleFileUpload(event) {
            const file = event.target.files[0];
            if (file && file.type.startsWith('image/')) {
                currentImage = file;
                const reader = new FileReader();
                reader.onload = function(e) {
                    document.getElementById('originalImage').src = e.target.result;
                    document.getElementById('previewArea').style.display = 'block';
                };
                reader.readAsDataURL(file);
                addStatusLog('ğŸ“¸ ì´ë¯¸ì§€ê°€ ì—…ë¡œë“œë˜ì—ˆìŠµë‹ˆë‹¤: ' + file.name);
            }
        }
        
        // ì§€ë¸Œë¦¬ ìŠ¤íƒ€ì¼ ë³€í™˜
        async function generateGhibliStyle() {
            if (!currentImage) {
                alert('ë¨¼ì € ì´ë¯¸ì§€ë¥¼ ì—…ë¡œë“œí•´ì£¼ì„¸ìš”.');
                return;
            }
            
            addStatusLog('ğŸ¨ ì§€ë¸Œë¦¬ ìŠ¤íƒ€ì¼ë¡œ ë³€í™˜ ì¤‘...');
            showProgress(30);
            
            try {
                // ì´ë¯¸ì§€ë¥¼ base64ë¡œ ë³€í™˜
                const base64Image = await fileToBase64(currentImage);
                
                // Claude APIë¥¼ ì‚¬ìš©í•˜ì—¬ ì´ë¯¸ì§€ ë¶„ì„ ë° ìŠ¤íƒ€ì¼ ë³€í™˜ ì„¤ëª…
                const response = await fetch('https://api.anthropic.com/v1/messages', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        model: 'claude-sonnet-4-20250514',
                        max_tokens: 1000,
                        messages: [
                            {
                                role: 'user',
                                content: [
                                    {
                                        type: 'image',
                                        source: {
                                            type: 'base64',
                                            media_type: currentImage.type,
                                            data: base64Image.split(',')[1]
                                        }
                                    },
                                    {
                                        type: 'text',
                                        text: document.getElementById('stylePrompt').value
                                    }
                                ]
                            }
                        ]
                    })
                });
                
                const data = await response.json();
                const styleDescription = data.content[0].text;
                
                showProgress(70);
                
                // ì‹¤ì œë¡œëŠ” ì´ë¯¸ì§€ ìƒì„± AI (DALL-E, Midjourney ë“±)ë¥¼ ì‚¬ìš©
                // ì—¬ê¸°ì„œëŠ” ì‹œë®¬ë ˆì´ì…˜
                setTimeout(() => {
                    // ë³€í™˜ëœ ì´ë¯¸ì§€ í‘œì‹œ (ì‹¤ì œë¡œëŠ” ìƒì„±ëœ ì´ë¯¸ì§€)
                    document.getElementById('convertedImage').src = document.getElementById('originalImage').src;
                    document.getElementById('convertedImage').style.filter = 'sepia(20%) saturate(120%) hue-rotate(15deg)';
                    
                    showProgress(100);
                    addStatusLog('âœ… ì§€ë¸Œë¦¬ ìŠ¤íƒ€ì¼ ë³€í™˜ ì™„ë£Œ');
                    
                    // ê²°ê³¼ë¥¼ êµ¬ê¸€ ì‹œíŠ¸ì— ì €ì¥
                    saveToGoogleSheets('conversions', {
                        timestamp: new Date().toISOString(),
                        originalImage: currentImage.name,
                        styleDescription: styleDescription,
                        status: 'completed'
                    });
                }, 2000);
                
            } catch (error) {
                addStatusLog('âŒ ë³€í™˜ ì˜¤ë¥˜: ' + error.message);
                showProgress(0);
            }
        }
        
        // ê°€ì‚¬ ìƒì„±
        async function generateLyrics() {
            if (!currentImage) {
                alert('ë¨¼ì € ì´ë¯¸ì§€ë¥¼ ì—…ë¡œë“œí•´ì£¼ì„¸ìš”.');
                return;
            }
            
            addStatusLog('âœï¸ ê°€ì‚¬ ìƒì„± ì¤‘...');
            
            try {
                const base64Image = await fileToBase64(currentImage);
                
                // Claude APIë¥¼ ì‚¬ìš©í•˜ì—¬ ì´ë¯¸ì§€ ê¸°ë°˜ ê°€ì‚¬ ìƒì„±
                const response = await fetch('https://api.anthropic.com/v1/messages', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        model: 'claude-sonnet-4-20250514',
                        max_tokens: 1000,
                        messages: [
                            {
                                role: 'user',
                                content: [
                                    {
                                        type: 'image',
                                        source: {
                                            type: 'base64',
                                            media_type: currentImage.type,
                                            data: base64Image.split(',')[1]
                                        }
                                    },
                                    {
                                        type: 'text',
                                        text: document.getElementById('lyricsPrompt').value
                                    }
                                ]
                            }
                        ]
                    })
                });
                
                const data = await response.json();
                generatedLyrics = data.content[0].text;
                
                document.getElementById('lyricsOutput').textContent = generatedLyrics;
                addStatusLog('âœ… ê°€ì‚¬ ìƒì„± ì™„ë£Œ');
                
                // ê²°ê³¼ë¥¼ êµ¬ê¸€ ì‹œíŠ¸ì— ì €ì¥
                saveToGoogleSheets('lyrics', {
                    timestamp: new Date().toISOString(),
                    image: currentImage.name,
                    lyrics: generatedLyrics,
                    prompt: document.getElementById('lyricsPrompt').value
                });
                
            } catch (error) {
                addStatusLog('âŒ ê°€ì‚¬ ìƒì„± ì˜¤ë¥˜: ' + error.message);
            }
        }
        
        // ì¸ìŠ¤íƒ€ê·¸ë¨ í¬ìŠ¤íŒ…
        async function postToInstagram() {
            if (!currentImage || !generatedLyrics) {
                alert('ë¨¼ì € ì´ë¯¸ì§€ ë³€í™˜ê³¼ ê°€ì‚¬ ìƒì„±ì„ ì™„ë£Œí•´ì£¼ì„¸ìš”.');
                return;
            }
            
            addStatusLog('ğŸ“± ì¸ìŠ¤íƒ€ê·¸ë¨ì— í¬ìŠ¤íŒ… ì¤‘...');
            
            try {
                // ì‹¤ì œë¡œëŠ” Instagram Basic Display API ë˜ëŠ” Instagram Graph API ì‚¬ìš©
                const instaData = {
                    image: convertedImageData || currentImage,
                    caption: generatedLyrics + '\n\n#ì§€ë¸Œë¦¬ #lyrics #ai #automation',
                    access_token: document.getElementById('instaToken').value
                };
                
                // API í˜¸ì¶œ ì‹œë®¬ë ˆì´ì…˜
                setTimeout(() => {
                    addStatusLog('âœ… ì¸ìŠ¤íƒ€ê·¸ë¨ í¬ìŠ¤íŒ… ì™„ë£Œ');
                    
                    // ê²°ê³¼ë¥¼ êµ¬ê¸€ ì‹œíŠ¸ì— ì €ì¥
                    saveToGoogleSheets('posts', {
                        timestamp: new Date().toISOString(),
                        image: currentImage.name,
                        lyrics: generatedLyrics,
                        instagram_url: 'https://instagram.com/p/simulated_post_id',
                        status: 'posted'
                    });
                }, 2000);
                
            } catch (error) {
                addStatusLog('âŒ í¬ìŠ¤íŒ… ì˜¤ë¥˜: ' + error.message);
            }
        }
        
        // êµ¬ê¸€ ì‹œíŠ¸ì— ë°ì´í„° ì €ì¥
        function saveToGoogleSheets(sheetName, data) {
            // ì‹¤ì œë¡œëŠ” Google Sheets API ì‚¬ìš©
            console.log(`Saving to ${sheetName}:`, data);
            addStatusLog(`ğŸ“Š ${sheetName} ì‹œíŠ¸ì— ë°ì´í„° ì €ì¥ë¨`);
        }
        
        // ìœ í‹¸ë¦¬í‹° í•¨ìˆ˜ë“¤
        function fileToBase64(file) {
            return new Promise((resolve, reject) => {
                const reader = new FileReader();
                reader.onload = () => resolve(reader.result);
                reader.onerror = reject;
                reader.readAsDataURL(file);
            });
        }
        
        function showProgress(percent) {
            const progressBar = document.getElementById('progressBar');
            const progressFill = document.getElementById('progressFill');
            
            if (percent > 0) {
                progressBar.style.display = 'block';
                progressFill.style.width = percent + '%';
            } else {
                progressBar.style.display = 'none';
            }
            
            if (percent >= 100) {
                setTimeout(() => {
                    progressBar.style.display = 'none';
                }, 1000);
            }
        }
        
        function addStatusLog(message) {
            const statusLog = document.getElementById('statusLog');
            const timestamp = new Date().toLocaleTimeString();
            const logEntry = document.createElement('p');
            logEntry.textContent = `[${timestamp}] ${message}`;
            statusLog.appendChild(logEntry);
            statusLog.scrollTop = statusLog.scrollHeight;
        }
        
        // ë“œë˜ê·¸ ì•¤ ë“œë¡­ ì´ë²¤íŠ¸
        const uploadArea = document.querySelector('.file-upload-area');
        
        uploadArea.addEventListener('dragover', (e) => {
            e.preventDefault();
            uploadArea.classList.add('dragover');
        });
        
        uploadArea.addEventListener('dragleave', () => {
            uploadArea.classList.remove('dragover');
        });
        
        uploadArea.addEventListener('drop', (e) => {
            e.preventDefault();
            uploadArea.classList.remove('dragover');
            
            const files = e.dataTransfer.files;
            if (files.length > 0 && files[0].type.startsWith('image/')) {
                document.getElementById('fileInput').files = files;
                handleFileUpload({ target: { files: files } });
            }
        });
        
        // ì´ˆê¸°í™”
        window.addEventListener('load', () => {
            addStatusLog('ğŸ¨ ì§€ë¸Œë¦¬ ìŠ¤íƒ€ì¼ ìë™í™” ì‹œìŠ¤í…œì´ ì¤€ë¹„ë˜ì—ˆìŠµë‹ˆë‹¤.');
        });
    </script>
